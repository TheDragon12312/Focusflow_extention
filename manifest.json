{
  "manifest_version": 3,
  "name": "FocusFlow Extension",
  "version": "1.0",
  "description": "Blocks distracting websites during focus sessions",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://focusflow.alwaysdata.net/*",
      "https://localhost:*/*"
    ]
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusFlow Extension"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "minimum_chrome_version": "88"
}
